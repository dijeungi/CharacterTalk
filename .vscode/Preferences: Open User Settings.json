/*
  본인에게 공유하려고 만든 파일입니다.
*/

{
  // 기본 터미널: Command Prompt
  "terminal.integrated.defaultProfile.windows": "Command Prompt",

  // 터미널 프로필 설정
  "terminal.integrated.profiles.windows": {
    "PowerShell": { "source": "PowerShell", "icon": "terminal-powershell" },
    "Command Prompt": {
      "path": ["${env:windir}\\Sysnative\\cmd.exe", "${env:windir}\\System32\\cmd.exe"],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": { "source": "Git Bash" },
    "Comman": { "path": "C:\\Windows\\System32\\cmd.exe", "args": [] }
  },

  // 파일 삭제/이동시 확인창 끄기
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,

  // 신뢰되지 않은 파일 열기 허용
  "security.workspace.trust.untrustedFiles": "open",

  // 테마 설정
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",

  // 저장할 때 포맷 자동 적용
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // 파일 이동 시 import 자동 업데이트 (JS/TS)
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // 터미널 다중 줄 붙여넣기 경고 끄기
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  // Git 관련 설정
  "git.openRepositoryInParentFolders": "never",

  // material-icon 폴더 & 파일 아이콘 설정
  "material-icon-theme.folders.associations": {
    "(route)": "Routes",
    "protected": "Private",
    "login": "Secure",
    "signup": "Secure"
  },

  // git emoji 커스텀 설정
  "gitmoji.addCustomEmoji": [
    { "emoji": "🎨", "name": "art", "description": "코드의 구조/형태 개선" },
